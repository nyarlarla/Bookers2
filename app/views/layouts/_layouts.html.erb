     <div class="col-sm-3">
			<h2>User info</h2>
			<div class="my-image">
				<%= attachment_image_tag user, :profile_image, :fill, 60,60, fallback: "no_image.jpg" %>
			</div><br/>
			<table class='table'>
				<tbody>
					<tr>
						<th>name</th>
						<th><%= user.name %></th>
					</tr><br/>
					<tr>
						<th>introduction</th>
						<th><%= user.introduction %></th>
					</tr>
				</tbody>
			</table>

		    <div class="edit-link">
				<%= link_to "",edit_user_path(current_user),class:'btn btn-default glyphicon glyphicon-wrench btn-block' %>
			</div>
				<h2> New book</h2><br/>
				<%= form_for(book) do |f| %>
					<div>
					 <label for="Title" >Title</label><br/>
					 <%= f.text_field :title, class:"form-control" %>
					</div><br/>
					<div>
	                 <label for="Title" >Opinion</label><br/>
					 <%= f.text_area :body, class:'form-control' %>
					</div><br/>
					<div>
					 <%= f.submit "Create Book", class:'btn btn-block btn-primary' %>
					</div>
				<% end %>
		</div>