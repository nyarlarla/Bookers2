<div class="container">
	<div class="row">
		<%= render 'layouts/layouts', user: @user, book: @book %>
		<div class="col-sm-9">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<% @users.each do |u| %>
				<tbody>
					<tr>
						<th><%= attachment_image_tag u, :profile_image, :fill, 100,100, fallback: "no_image.jpg" %></th>
						<th><%= u.name %></th>
						<th><%= link_to "show",user_path(u) %></th>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
</div>

